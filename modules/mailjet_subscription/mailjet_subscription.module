 */
function mailjet_subscription_unsubscribe_account($form, &$form_state) {
  global $user, $base_url;
  $mailjet = mailjet_new();

  $form_wrapper = entity_metadata_wrapper('signup_units_data', mailjet_subscription_load($form_state['values']['signup_id_form']));

  $unsub_params = array(
    'method' => 'POST',
    'Action' => 'Unsubscribe',
    'Addresses' => array($user->mail),
    'ListID' => $form_wrapper->signup_contact_lists2->value()
  );

  $mailjet->resetRequest();

  $response = $mailjet->manycontacts($unsub_params)->getResponse();

  if ($response && isset($response->Count) && $response->Count > 0) {
    watchdog('mailjet_messages', t('The new contact was unsubscribed from list #' . $form_wrapper->signup_contact_lists2->value() . '.'));
    drupal_set_message(t('The user is unsubscribe successfully!'));
